{
  "name": "point-control-api",
  "version": "1.1.1",
  "main": "src/external/server.ts",
  "description": "Api de uma aplicação de controle de pontos de empresas.",
  "repository": "https://github.com/Lissone/point-control-api.git",
  "author": "Leonardo Dias Lissone Santomero",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "commit": "git-cz",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./dist",
    "start": "node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/server.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch node_modules ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^2.29.3",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "ioredis": "^5.2.3",
    "jsonwebtoken": "^8.5.1",
    "mssql": "^6.2.1",
    "nodemailer": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "^0.2.32",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^15.0.2",
    "@types/nodemailer": "^6.4.6",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.26.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "*"
  },
  "husky": {
    "hooks": {
      "commit-msg": "yarn commitlint --edit $1",
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "yarn pretty-quick --staged",
      "yarn eslint --fix src --ext .ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
